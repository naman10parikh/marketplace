# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mcp_marketplace
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mcp_marketplace

# JWT Authentication
JWT_SECRET=your_super_secret_key_change_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_refresh_secret_key_change_in_production
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@mcp-marketplace.com

# GitHub Integration
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_change_in_production
GITHUB_API_TOKEN=your_github_api_token_change_in_production

# Pinecone Vector Database
PINECONE_API_KEY=your_pinecone_api_key_change_in_production
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=mcp-servers

# Logging
LOG_LEVEL=info 